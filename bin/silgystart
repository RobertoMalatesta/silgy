#!/bin/sh

export SILGY_SVC_PROCESSES=0

echo "Starting Silgy..."

# ---------------------------------------------------------------------
# Main app

nohup $SILGYDIR/bin/silgy_app &
sleep 1

# ---------------------------------------------------------------------
# Services

for i in `seq 1 $SILGY_SVC_PROCESSES`
do
    nohup $SILGYDIR/bin/silgy_svc &
done

sleep 1  # return to prompt
